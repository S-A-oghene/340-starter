<%# The view for deleting an inventory item %> <% if (title) { %>
<h1><%= title %></h1>
<% } %>
<%- messages() %>

<p class="notice">
  Confirm Deletion - The delete is permanent and cannot be undone.
</p>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/inv/delete" method="post">
  <fieldset>
    <label for="inv_make">Make:</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      readonly
      value="<%= inv_make %>"
    />

    <label for="inv_model">Model:</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      readonly
      value="<%= inv_model %>"
    />

    <label for="inv_year">Year:</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      readonly
      value="<%= inv_year %>"
    />

    <label for="inv_price">Price:</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      readonly
      value="<%= inv_price %>"
    />

    <button type="submit">Delete Vehicle</button>

    <input type="hidden" name="inv_id" value="<%= inv_id %>" />
  </fieldset>
</form>
