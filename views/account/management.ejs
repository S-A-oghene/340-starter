<%# The account management view %>

<div class="management-view">
  <% if (title) { %>
  <h1><%- title %></h1>
  <% } else { res.redirect('/') } %> <%- messages() %>

  <h2>Welcome, <%- locals.accountData.account_firstname %>!</h2>
  <p>You're logged in.</p>

  <h3>Account Management</h3>
  <p>
    <a href="/account/update/<%= locals.accountData.account_id %>"
      >Update Account Information</a
    >
  </p>

  <% if (locals.accountData.account_type === 'Employee' ||
  locals.accountData.account_type === 'Admin') { %>
  <h3>Inventory Management</h3>
  <p>Use the link below to manage the inventory.</p>
  <p><a href="/inv/">Manage Inventory</a></p>
  <% } %> <%- reviewsList %>
</div>
